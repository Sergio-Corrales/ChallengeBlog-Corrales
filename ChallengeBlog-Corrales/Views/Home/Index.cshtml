@model List<ChallengeBlog_Corrales.Models.TableViewModels.HomePostsTableViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h2 class="display-4">Bienvenidos al Blog Alkemy</h2>
    <br />
</div>

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered">
                <tr>
                    <th style="text-align:center">Imagen</th>
                    <th>Titulo</th>
                    <th></th>
                </tr>


                @foreach (var oElemento in Model)
                {
            <tr>
                @*<td><img src="@ViewBag.Base64String" style="height:40px; width:40px;" /></td>*@
                <td style="text-align:center"><img src="@Url.Action("GetImage", "Home", new {Id = oElemento.Id })" style="height:40px; width:40px;"></td>
                <td>@oElemento.Title</td>
                <td style="text-align:center">
                    <input onclick="document.location.href = '@Url.Content("~/Post/Index?Id=" + oElemento.Id)'" type="button" class="btn btn-warning" value="Detalle"  />
                </td>
            </tr>
                }
            </table>
        </div>
    </div>
}
else
{
    <p>No hay Posts, Se el Primero!!</p>
}

<div class="row">
    <div class="col-sm-12"></div>
    <a class="btn btn-success d-block" asp-action="Create" asp-controller="Posts">Crear Nuevo Post</a>
</div>