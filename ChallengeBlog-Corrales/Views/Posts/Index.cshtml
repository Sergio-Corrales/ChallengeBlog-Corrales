@model IEnumerable<ChallengeBlog_Corrales.Models.Post>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Administrar Posts del Blog</h1>

<div class="container">

    <div class="row">
        @if (Model.Count() > 0) 
         {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(x => x.Id)</td>
                        <td>@Html.DisplayNameFor(x => x.Title)</td>
                        <td>@Html.DisplayNameFor(x => x.Contents)</td>
                        <td>@Html.DisplayNameFor(x => x.Picture)</td>
                        <td>@Html.DisplayNameFor(x => x.Category)</td>
                        <td>@Html.DisplayNameFor(x => x.Creation_Date)</td>
                    </tr>
                </thead>
            </table>
         }
            else
            {
            <p>No hay Posts</p>
            }
    </div>

</div>