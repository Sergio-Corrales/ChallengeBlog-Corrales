@model IEnumerable<ChallengeBlog_Corrales.Models.Post>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Post del Blog</h1>

<br />

<div class="container">

    <div class="row">
        @if (Model.Count() > 0) 
         {
            <table class="table table-bordered table-striped">
                
                @foreach (var oElemento in Model)
                 {
                <tr>
                    <td><img src="@ViewBag.Base64String" style="height:100px; width:100px;" /></td>
                    <td>@oElemento.Title</td>
                    <td>@oElemento.Contents</td>
                    <td>@oElemento.Category</td>
                    <td>@oElemento.Creation_Date.ToShortDateString()</td>
                    <td><a asp-controller="Posts" asp-action="Edit" asp-route-id="@oElemento.Id" class="btn btn-warning">Editar</a></td>
                    <td><a asp-controller="Posts" asp-action="Delete" asp-route-id="@oElemento.Id" class="btn btn-danger">Eliminar</a></td>
                </tr>
                 }

             </table>
         }
         else
         {
            <p>No hay Posts</p>
         }
    </div>

</div>